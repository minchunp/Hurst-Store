<%- include('./templates/header_admin') %>
<!-- Section dashboard -->
<section>
   <div class="main-dashboard">
      <div class="boxcenter">
         <div class="title-product">
            <h1>Dashboard</h1>
            <!-- <i id="add-product-page-btn" class="bi bi-plus"></i> -->
         </div>

         <div class="container-box-infor-dashboard">
            <div class="infor-dashboard">
               <div class="top-infor-dashboard">
                  <div class="title-infor-dasboard">
                     <p>Total User</p>
                     <h3><%= userLists.length %></h3>
                  </div>

                  <div class="icon-infor-dashboard_1">
                     <i class="bi bi-people-fill"></i>
                  </div>
               </div>
               <div class="content-infor-dashboard">
                  <i class="bi bi-graph-up-arrow up"></i>
                  <p><span class="up">8.3%</span> Up from yesterday</p>
               </div>
            </div>

            <div class="infor-dashboard">
               <div class="top-infor-dashboard">
                  <div class="title-infor-dasboard">
                     <p>Total Order</p>
                     <h3><%= orderLists.length %></h3>
                  </div>

                  <div class="icon-infor-dashboard_2">
                     <i class="bi bi-box"></i>
                  </div>
               </div>
               <div class="content-infor-dashboard">
                  <i class="bi bi-graph-up-arrow up"></i>
                  <p><span class="up">1.3%</span> Up from yesterday</p>
               </div>
            </div>

            <div class="infor-dashboard">
               <div class="top-infor-dashboard">
                  <div class="title-infor-dasboard">
                     <p>Total Sales</p>
                     <h3>$<%= totalSale %></h3>
                  </div>

                  <div class="icon-infor-dashboard_3">
                     <i class="bi bi-graph-up"></i>
                  </div>
               </div>
               <div class="content-infor-dashboard">
                  <i class="bi bi-graph-down-arrow down"></i>
                  <p><span class="down">4.5%</span> Up from yesterday</p>
               </div>
            </div>

            <div class="infor-dashboard">
               <div class="top-infor-dashboard">
                  <div class="title-infor-dasboard">
                     <p>Total Pending</p>
                     <h3><%= orderPendingLists.length %></h3>
                  </div>

                  <div class="icon-infor-dashboard_4">
                     <i class="bi bi-clock-history"></i>
                  </div>
               </div>
               <div class="content-infor-dashboard">
                  <i class="bi bi-graph-up-arrow up"></i>
                  <p><span class="up">1.3%</span> Up from yesterday</p>
               </div>
            </div>
         </div>

         <div class="order-pending">
            <div class="title-order-pending">
               <h1>Order Pending</h1>
               <div class="filter-oder-pending">
                  <select name="" id="">
                     <option value="">January</option>
                     <option value="">February</option>
                     <option value="">March</option>
                     <option value="">April</option>
                     <option value="">May</option>
                     <option value="">June</option>
                     <option value="">July</option>
                     <option value="">August</option>
                     <option value="">September</option>
                     <option value="">October</option>
                     <option value="">November</option>
                     <option value="">December</option>
                  </select>
               </div>
            </div>

            <div class="list-order-pending">
               <div class="title-list-order-pending">
                  <p>ID</p>
                  <p>User Name</p>
                  <p>Address</p>
                  <p>Total Money</p>
                  <p>Date - Time</p>
                  <p>Status</p>
               </div>

               <div class="main-list">
                  <% let idOrder = ''; orderPendingListsWithLimit.forEach(order => { %>
                     <% let idOrder = (order._id).slice(20) %>
                        <div class="main-order-pending">
                           <a href="/admin/order/<%= order._id %>">
                              <p><%= idOrder %></p>
                           </a>
                           <p><%= order.name_user %></p>
                           <p>TCH, Ho Chi Minh city</p>
                           <p class="pending-total-money">$<%= order.total_order %></p>
                           <p><%= order.date_order %></p>
                           <a class="statusA" href="/admin/order/<%= order._id %>">
                              <% if (order.status_order == 'order') { %>
                                    <div class="status pending">
                                       <p>Pending</p>
                                    </div>
                              <% } else if (order.status_order == 'shipping') { %>
                                    <div class="status in-transit">
                                       <p>In transit</p>
                                    </div>
                              <% } else if (order.status_order == 'success') { %>
                                    <div class="status complete">
                                       <p>Complete</p>
                                    </div>
                              <% } else if (order.status_order == 'cancel') { %>
                                    <div class="status rejected">
                                       <p>Rejected</p>
                                    </div>
                              <% } %>
                           </a>
                        </div>
                  <% }); %>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
<%- include('./templates/footer_admin') %>